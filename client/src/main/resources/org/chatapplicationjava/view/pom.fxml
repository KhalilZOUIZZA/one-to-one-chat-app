<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="chat-borderpane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.controller.package.YourControllerClass">

    <!-- Top Section: Sender Information -->
    <top>
        <HBox alignment="CENTER" spacing="10" styleClass="sender-info">
            <Label styleClass="sender-label" text="You are: John Doe" />
        </HBox>
    </top>

    <!-- Left Section: User List -->
    <left>
        <VBox prefHeight="359.0" prefWidth="220.0" spacing="10" styleClass="user-list">
            <Label styleClass="header-label" text="My Contacts" textFill="#c61e1e" />
            <ListView fx:id="friendsListView" prefHeight="509.0" prefWidth="200" />
        </VBox>
    </left>

    <!-- Center Section: Chat Messages -->
    <center>
        <VBox spacing="10" styleClass="chat-section">
            <ScrollPane VBox.vgrow="ALWAYS">
                <ListView fx:id="messageListView" prefWidth="600" styleClass="chat-list" />
            </ScrollPane>
        </VBox>
    </center>

    <!-- Bottom Section: Message Input and Sender Information -->
    <bottom>
        <VBox prefHeight="80.0" prefWidth="697.0" spacing="10" styleClass="message-section">
            <!-- Message input -->
            <TextField fx:id="messageTextField" prefHeight="0.0" prefWidth="584.0" promptText="Type a message..." VBox.vgrow="ALWAYS" />
            
            <!-- Send button -->
            <Button onAction="#sendMessage" text="Send" />
        </VBox>
    </bottom>
    <stylesheets>
        <URL value="@chatcss.css" />
    </stylesheets>
</BorderPane>
